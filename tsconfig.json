{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "target": "ESNext",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noEmitOnError": false,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": ["src"], 
  "exclude": ["node_modules", "dist"]
} 